---
import { IoIosArrowForward } from "react-icons/io";

export interface Props {
	breadcrumbs: Array<{ name: string; href?: string }>;
}

const { breadcrumbs } = Astro.props;
---

<div class="flex flex-row gap-2 items-center">
	{
		breadcrumbs.map((item, index) =>
			item.href ? (
				<a
					href={item.href}
					class="text-gray-500 hover:text-gray-400 cursor-pointer   flex flex-row gap-2 items-center"
				>
					{item.name != "Home" && <IoIosArrowForward />}
					{item.name}
				</a>
			) : (
				<span class=" text-gray-500 cursor-default flex flex-row items-center gap-2">
					<IoIosArrowForward />
					{item.name}
				</span>
			)
		)
	}
</div>
